<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.GoodsListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <com.service.business.ui.view.ExpandTabView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandtab_view">

            </com.service.business.ui.view.ExpandTabView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="vertical"

                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16">
                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言备注"
                    android:textColor="@color/dark"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuan_white_tag">
                    <EditText
                        android:id="@+id/et_feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left|top"
                        android:hint="@string/feed"
                        android:inputType="textMultiLine"
                        android:maxLength="200"
                        android:minLines="8"
                        android:textColor="@color/dark"
                        android:textColorHint="@color/tab_unchecked"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="采购列表"
                android:background="@color/white"
                android:textColor="@color/dark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/sq_green"
                android:text="确认并生成订单"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>